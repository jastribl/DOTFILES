    path = .gitconfig.local
[user]
	name = Justin Stribling
	useConfigOnly = true
[gui]
	fontdiff = -family Monaco -size 13 -weight normal -slant roman -underline 0 -overstrike 0
	tabsize = 4
[push]
	default = current
[pull]
	default = current
	rebase = true
[alias]
	checkoutr = checkout
[diff]
	tool = vimdiff
