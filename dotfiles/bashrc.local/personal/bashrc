# easy way to open a PR against develop
PR () {
    BASE_URL=`git remote -v | grep "push" | awk '{print $2}' | sed -e 's/\(.*\)\.git/\1/'`
    BASE_BRANCH='develop'
    COMPARE_BRANCH=`git symbolic-ref --short HEAD`
    PR_URL="$BASE_URL/compare/$BASE_BRANCH...$COMPARE_BRANCH?expand=1"
    open ${PR_URL}
}

function pandoc_latex() {
    pandoc ${1} --latex-engine=`which pdflatex` -V geometry:margin=1.00in --table-of-contents --number-sections -o ${2}
}

if command -v brew >/dev/null 2>&1; then
    # Load rupa's z if installed
    [ -f "$(brew --prefix)/etc/profile.d/z.sh" ] && source "$(brew --prefix)/etc/profile.d/z.sh"
fi
