export PATH="$PATH:$HOME/.rvm/bin" # Add RVM to PATH for scripting

alias reindex_spotlight='sudo mdutil -E -i on /'
alias remove_ds_store_files='sudo find . -name '.DS_Store' -type f -delete'

# use vim installed through brew, not the built-in vim
alias vim='/usr/local/bin/vim'
alias vi="vim -u NONE"

alias grepv='grep -v'
alias copy_location='pwd | pbcopy'
alias cd_clipboard='cd `pbpaste`'

# my trusty git hacks
alias wipit='git add . && git commit -nam "WIP"'
alias unwipit='git reset --soft HEAD~ && git reset'
alias gap='git add --patch'
alias gbgone='git branch -vv | grep ": gone"'

# quick aliases to help set per-repo emails for git (for use with "useConfigOnly = true" in gitconfig)
alias set_git_email_textnow='git config --local user.email "justin.stribling@textnow.com"'
alias set_git_email_school='git config --local user.email "jastribl@edu.uwaterloo.ca"'
alias set_git_email_personal='git config --local user.email "justinastribling@gmail.com"'

# some simple aliases to get places
alias go_desktop='cd ~/Desktop'
alias go_documents='cd ~/Documents'
alias go_git='cd ~/Documents/Github'
alias go_downloads='cd ~/Downloads'

# easy way to open a PR against develop
PR () {
    BASE_URL=`git remote -v | grep "push" | awk '{print $2}' | sed -e 's/\(.*\)\.git/\1/'`
    BASE_BRANCH='develop'
    COMPARE_BRANCH=`git symbolic-ref --short HEAD`
    PR_URL="$BASE_URL/compare/$BASE_BRANCH...$COMPARE_BRANCH?expand=1"
    open ${PR_URL}
}

if [[ -e ~/.bashrc.local ]]; then
    source ~/.bashrc.local
fi
